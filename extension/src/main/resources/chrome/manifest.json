{
  "manifest_version": 3,
  "name": "Odigo environments linker",
  "version": "@project.version@",
  "description": "Launch Odigo CC of all CMDB environments.",
  "permissions" : [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://vmw-git.internal.odigo.cloud/",
    "*://*/*"
  ],
  "icons": {
    "16": "images/logo16.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "action": {
    "default_title": "Odigo environments linker",
    "default_icon": "images/logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.console.aws.amazon.com/*",
        "https://phd.aws.amazon.com/*",
        "https://*.console.amazonaws-us-gov.com/*",
        "https://*.console.amazonaws.cn/*"
      ],
      "all_frames": true,
      "js": [
        "js/modules/aws-role-switcher/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "js/modules/aws-role-switcher/attach-target.js" ],
      "matches": [
        "https://*.console.aws.amazon.com/*",
        "https://phd.aws.amazon.com/*",
        "https://*.console.amazonaws-us-gov.com/*",
        "https://*.console.amazonaws.cn/*"
      ]
    }
  ],
  "background": {
    "service_worker": "js/modules/aws-role-switcher/background.js"
  }
}
